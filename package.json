{
  "name": "valtor",
  "description": "TypeScript library for fluent, chainable validation.",
  "version": "0.5.4",
  "type": "module",
  "main": "./lib/index.cjs",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.js"
      },
      "require": {
        "types": "./lib/index.d.cts",
        "default": "./lib/index.cjs"
      }
    }
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf lib",
    "check": "tsc --noEmit",
    "test": "npm run check && jest",
    "build": "npm run clean && npm run test && tsup",
    "prepack": "npm run build",
    "lint": "eslint src",
    "format": "prettier -w src"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@jest/globals": "^30.0.2",
    "@types/node": "^22.15.32",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsdoc": "^51.0.1",
    "expect-type": "^1.2.1",
    "globals": "^16.2.0",
    "jest": "^30.0.2",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.34.0"
  },
  "author": "Sergey Fomin <saffr3n@gmail.com>",
  "homepage": "https://github.com/saffr3n/valtor#readme",
  "bugs": {
    "url": "https://github.com/saffr3n/valtor/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saffr3n/valtor.git"
  },
  "license": "MIT"
}
